# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Upstash Redis (for rate limiting)
# Get these from: https://console.upstash.com/ or your Supabase project
UPSTASH_REDIS_REST_URL=your_upstash_redis_rest_url
UPSTASH_REDIS_REST_TOKEN=your_upstash_redis_rest_token

# Icons8 API Keys (for image processing)
ICONS8_BG_REMOVER_API_KEY=your_icons8_bg_remover_key
ICONS8_UPSCALER_API_KEY=your_icons8_upscaler_key
ICONS8_FACE_SWAPPER_API_KEY=your_icons8_face_swapper_key

# Polar (payment processing)
POLAR_ACCESS_TOKEN=your_polar_access_token
POLAR_WEBHOOK_SECRET=your_polar_webhook_secret

# Resend (email service)
# Get your API key from: https://resend.com/api-keys
RESEND_API_KEY=your_resend_api_key
CONTACT_EMAIL=hello@erazor.app

# Cloudflare Turnstile (CAPTCHA)
NEXT_PUBLIC_TURNSTILE_SITE_KEY=your_turnstile_site_key

# Site Configuration
NEXT_PUBLIC_SITE_URL=http://localhost:3000
NEXT_PUBLIC_DEV_SUPABASE_REDIRECT_URL=http://localhost:3000/dashboard

# CDN (Optional)
NEXT_PUBLIC_CLOUDFLARE_CDN_URL=your_cdn_url

# Node Environment
NODE_ENV=development
